@model Coupon
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="text-info">
    <h2>
        Create Coupon
    </h2>
</div>
<div class="border backgroundWhite">
    <form method="post" enctype="multipart/form-data">
        <div class="form-group row">
            <label asp-for="@Model.Name" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-6">
                <input class="form-control" asp-for="@Model.Name">
                <span asp-validation-for="@Model.Name" class="text-danger"></span>
            </div>
        </div>


        <div class="form-group row">
            <label asp-for="@Model.Image" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-6">
                <input type="file" name="file" class="form-control" asp-for="@Model.Image">
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="@Model.CouponType" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-6">
                <select class="form-control" asp-for="@Model.CouponType" asp-items="Html.GetEnumSelectList<Coupon.Ecoupontype>()"></select>
                <span asp-validation-for="@Model.CouponType" class="text-danger"></span>

            </div>
        </div>


        <div class="form-group row">
            <label asp-for="@Model.Discount" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-6">
                <input class="form-control" asp-for="@Model.Discount">
                <span asp-validation-for="@Model.Discount" class="text-danger"></span>

            </div>
        </div>


        <div class="form-group row">
            <label asp-for="@Model.IsActive" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-6">
                <input type="checkbox" class="form-control" asp-for="@Model.IsActive">
            </div>
        </div>

        <div class="form-group row">
            <div class="col-6 offset-2">
                <div class="row">

                    <div class="col-6">

                        <input type="submit" value="Create" asp-action="Create" class="btn btn-info form-control" />
                    </div>
                    <div class="col-6">
                        <input value="Back To List" asp-action="index" class="btn btn-success form-control" />
                    </div>
                </div>
            </div>
        </div>
    </form>

</div>

@section scripts {
    <partial name="_ValidationScriptsPartial" />
}