@model List<MenuItem>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}




<br />
<div class="border backgroundWhite">
    <div class="row">
        <div class="col-6 text-info">
            <h2>
               MenuItems
            </h2>
        </div>

        <div class="col-6  text-right text-light">
            <partial name="_CreateNewPartial" action="Create" />
        </div>
    </div>
    <br />
    <div class="border">
        @if (Model.Count > 0)
        {

            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>

                            @Html.DisplayNameFor(x => x[0].Name)
                        </th>
                        <th>@Html.DisplayNameFor(x=>x[0].Price)</th>
                        <th> @Html.DisplayNameFor(x =>x[0].SubCategory.Name)</th>
                        <th>

                            @Html.DisplayNameFor(x => x[0].Category.Name)
                        </th>

                        <th scope="col"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var menuItem in Model)
                    {
                        <tr>


                            <td>@menuItem.Name</td>
                            <td>@menuItem.Price</td>
                            <td>@menuItem.SubCategory.Name</td>
                            <td>@menuItem.Category.Name</td>
                            <td>

                                <partial name="_TableButtonsPartial" model="menuItem.Id" />
                            </td>
                        </tr>
                    }

                </tbody>
            </table>
        }
        else
        {
            <p>No MenuItems found</p>
        }
    </div>
</div>