@model Category
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="text-info">
    <h2>
        Details Category
    </h2>
</div>
<div class="border backgroundWhite">
    <form method="post">
        <div class="form-group row">
            <input type="hidden" asp-for="@Model.Id" />
            <label asp-for="@Model.Name" class="col-sm-2 col-form-label">Name</label>
            <div class="col-sm-6">
                <input type="text" readonly class="form-control" asp-for="@Model.Name">
                <span asp-validation-for="@Model.Name" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-6 offset-2">
                <div class="row">

                    <div class="col-6">

                        <input type="submit" value="Edit" asp-action="Edit" class="btn btn-info form-control" />
                    </div>
                    <div class="col-6">
                        <input value="Back To List" asp-action="index" class="btn btn-success form-control" />
                    </div>
                </div>
            </div>
        </div>
    </form>

</div>

@section scripts {
    <partial name="_ValidationScriptsPartial" />
}
