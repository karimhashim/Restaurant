@model List<Category>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<br />
<div class="border backgroundWhite">
    <div class="row">
        <div class="col-6 text-info">
            <h2>
                Categories
            </h2>
        </div>

        <div class="col-6  text-right text-light" >
          <partial name="_CreateNewPartial" action="Create"/>
        </div>
    </div>
    <br />
    <div class="border" >
        @if(Model.Count > 0) { 
        <table class="table table-striped" >
            <thead>
                <tr>
                    
                    <th scope="col">CategoryName</th>

                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var category in Model)
                {
                    <tr>

                        
                        <td>@category.Name</td>
                      <td>

                        <partial name="_TableButtonsPartial" model="category.Id" />
                      </td>
                    </tr>
                }

            </tbody>
        </table>
        }
        else
        {
            <p>No Category found</p>
        }
    </div>
</div>