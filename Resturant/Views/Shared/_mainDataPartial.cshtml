@model IEnumerable<MenuItem>


@if(Model.Count() > 0)
{
    <div class="col-12 post @Model.FirstOrDefault().Category.Name.Replace(" ",string.Empty) menu-resturant">
        <div class="row">
            <h1 class="text-success">@Model.FirstOrDefault().Category.Name</h1>
        </div>

        @foreach(var item in Model)
        {
            <div class="border border-info col-12"  style="margin:10px;padding:10px;border-radius:5px;height:200px">
                <div class="row">
                    <div class="col-md-3">
                        <img src="~/Images/@item.Image" width="99%" height="170px" style="border-radius:5px;border:1px solid black;"/>
                    </div>
                    <div class="col-md-9">
                        <div class="row">
                            <div class="col-md-8"><lable class="text-info"> @item.Name</lable></div>
                            <div class="col-md-4 text-md-right" style="color:maroon"> <h2>$@item.Price</h2></div>
                        </div>
                        <div class="row col-12"><p>@item.Discription</p></div>
                        <div class=" col-3 offset-9 text-right"><a class="btn btn-success form-control" asp-action="Details" asp-route-Id="@item.Id">Details</a></div>
                    </div>
                </div>
            </div>
        }
    </div>
}